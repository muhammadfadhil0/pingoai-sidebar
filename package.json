{
  "name": "pingoai",
  "version": "1.0.0",
  "description": "AI Integration for Desktop",
  "main": "loader.js",
  "scripts": {
    "start": "electron .",
    "start:installer": "node scripts/reset-onboarding.js && electron . --installer",
    "dev": "electron . --no-sandbox",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build-secure": "node build-obfuscate.js && node compile-bytecode.js && electron-builder",
    "build-secure:win": "node build-obfuscate.js && node compile-bytecode.js && electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watcher:build": "dotnet publish native/HighlightWatcher/HighlightWatcher.csproj -c Release -o native/HighlightWatcher/bin/Publish"
  },
  "build": {
    "appId": "com.pingoai.app",
    "productName": "PingoAI",
    "directories": {
      "output": "release"
    },
    "files": [
      "loader.js",
      "dist/**/*",
      "main.js",
      "node_modules/**/*",
      "assets/**/*",
      "src/**/*",
      "scripts/**/*",
      "native/**/*",
      "!build-obfuscate.js",
      "!compile-bytecode.js",
      "!dist/main-obfuscated.js",
      "!**/*.map"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/256_icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": "Muhammad Fadhil",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "javascript-obfuscator": "^4.1.1"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "axios": "^1.13.2",
    "bytenode": "^1.3.6",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2"
  }
}